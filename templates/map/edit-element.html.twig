{% extends 'map/index.html.twig' %}

{% block global %}
<div class="sub-nav">
    <div class="title">
        <h2 class="add-title">Modification de l'élément "{{ nomElement }}"</h2>
    </div>

    {{ form_start(form) }}

    <fieldset class="form-group">
    {{ form_label(form.coordonnees) }}
    {{ form_errors(form.coordonnees) }}
    {{ form_row(form.coordonnees.latitude , {'value' : latitude }) }}
    {{ form_row(form.coordonnees.longitude, {'value' : longitude }) }}
    </fieldset>
    {{ form_rest(form) }}
    {{ form_end(form) }}
</div>

{# passage de données via Twig #}
<div class="calqueNom" calqueNom="{{ nomCalque }}"></div>
<div class="photo" photo="{{ photo }}"></div>
<div class="lien" lien="{{ lien }}"></div>
{% endblock %}