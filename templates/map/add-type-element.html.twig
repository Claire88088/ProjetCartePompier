                <div class="title">
                        <h2 class="add-title">Ajout d'un nouveau type d'éléments</h2>
                </div>
        {% else %}
                <div class="title">
                        <h2 class="add-title">Modification d'un type d'éléments</h2>
                </div>
        {% endif %}
        {{ form(form) }}
{% endblock %}