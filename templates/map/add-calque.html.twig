{% extends 'map/index.html.twig' %}

{% block title %}Ajout calque{% endblock %}

{% block global %}
        {# Test si la chaine dans l'url est add-calque et display le bon titre en cons√©quence #}
        {% if 'add-calque' in app.request.uri %}
                <div class="title">
                        <h1 class="add-title">Ajout d'un nouveau calque</h1>
                </div>
        {% else %}
                <div class="title">
                        <h1 class="add-title">Modification d'un calque</h1>
                </div>
        {% endif %}
        {{ form(form) }}
{% endblock %}