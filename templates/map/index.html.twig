{% extends 'base.html.twig' %}
{% block body %}
    <div id="bLog">
        <div id="Ah3">
            <h3>Affichage des données</h3>
        </div>
    {% if not app.user %}
        <!-- Button trigger modal -->
        <div id ="aFlex">
            <a id="log" class="btn btn-primary col" role="button" data-toggle="modal" data-target="#exampleModal">Se connecter</a>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Connexion</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        {{ render(controller('App\\Controller\\SecurityController::login')) }}
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <div id ="aFlex">
            <a id="log" class="btn btn-primary col" href="{{ path('app_logout') }}" role="button">Se déconnecter</a>*
        </div>
    {% endif %}
    </div>

    <div class="container-fluid">
        <div class="row">
            <div id="mapid" class="col" ></div>

            {% if app.user %}
                <div id="form">
                    {% block global %}
                        <form action="{{ path('calques_list') }}" method="post">
                            <button class="btn btn-primary">Lister les calques</button>
                        </form>
                        <hr>
                        <form action="{{ path('add_calque') }}" method="post">
                            <button class="btn btn-primary">Créer un nouveau calque</button>
                        </form>
                        <hr>
                        <form action="" method="post">
                            <button class="btn btn-primary">Ajouter un élément sur un calque</button>
                        </form>
                        <hr>
                    {% endblock %}

                    {%  if app.request.get('_route') != "map" %}
                        <form action="{{ path('map') }}" method="post">
                            <button class="btn btn-primary">retour</button>
                        </form>
                    {% endif %}
                </div>
        </div>
            {% endif %}
    </div>

    {{ render(controller('App\\Controller\\MapController::envoiDonneesJSAction')) }}
{% endblock %}
